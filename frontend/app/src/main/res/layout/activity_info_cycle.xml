<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_04"
    android:orientation="vertical"
    android:gravity="center|bottom"
    tools:context=".Info_Cycle_Activity">

    <TextView
        android:id="@+id/page3_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:textSize="36sp"
        android:textColor="@color/color2"
        android:layout_marginHorizontal="60dp"
        android:gravity="center"
        android:text="@string/page3_text1" />

    <ImageView
        android:id="@+id/page3_image1"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/info_cycle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/page3_button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/button_effect2"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/check"/>

        <ImageButton
            android:id="@+id/page3_button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/button_effect2"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/cross"/>

    </LinearLayout>

</LinearLayout>