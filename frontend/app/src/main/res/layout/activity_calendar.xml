<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_01"
    android:orientation="vertical"
    android:gravity="center|bottom"
    tools:context=".Calendar_Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/date_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_display_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"
                    android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                    android:textColor="#222222"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_display_day"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center"
                        android:text="17"
                        android:textColor="#222222"
                        android:textSize="55sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_display_month"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:text="Feb"
                        android:textColor="#222222"
                        android:textSize="55sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/date_display_dayname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Saturday"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="#222222"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/calendar_header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Pn"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/color1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Wt"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/color1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Åšr"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/color1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Cz"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/color1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Pt"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/color1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="So"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/color1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Nd"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/color1" />
        </LinearLayout>

        <GridView
            android:id="@+id/calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:numColumns="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="3dp"
        android:background="@color/color4">

        <ImageButton
            android:id="@+id/btn_temperature"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu_temperature"/>

        <ImageButton
            android:id="@+id/btn_main"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu_main"/>

        <ImageButton
            android:id="@+id/btn_calendar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu_calendar_hover"/>

        <ImageButton
            android:id="@+id/btn_personal_info"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu_personal_info"/>

    </LinearLayout>
</LinearLayout>