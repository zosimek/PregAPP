<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_02"
    android:orientation="vertical"
    android:gravity="center|bottom"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/page1_image1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logo_02" />

    <Button
        android:id="@+id/page1_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_effect1"
        android:fontFamily="@font/roboto"
        android:paddingVertical="15dp"
        android:text="@string/page1_text1"
        android:textColor="@color/color1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/page1_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button_effect1"
        android:fontFamily="@font/roboto"
        android:paddingVertical="15dp"
        android:text="@string/page1_text2"
        android:textColor="@color/color1"
        android:textSize="18sp" />
</LinearLayout>